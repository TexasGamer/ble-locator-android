<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/launcherIcon"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/appName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/launcherIcon"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/appVersion"
        android:layout_below="@+id/appName"
        android:layout_alignStart="@+id/appName" />

    <LinearLayout
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/launcherIcon"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/dialogLicenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_about_licenses"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="14sp"
            android:textColor="?colorPrimary"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>